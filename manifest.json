{
    "manifest_version": 3,
    "name": "Coursera Auto-Completer",
    "version": "1.2.0",
    "author": "Priyanshu Gupta",
    "description": "Automatically completes Coursera videos and readings instantly.",
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "tabs"
    ],
    "host_permissions": [
        "*://*.coursera.org/*",
        "https://raw.githubusercontent.com/*"
    ],
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.coursera.org/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_end"
        }
    ]
}